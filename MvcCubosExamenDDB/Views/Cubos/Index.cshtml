@model List<Cubo>

<header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Cubos DDB</h1>
                <p class="lead fw-normal text-white-50 mb-0">Compra tantos cubos como quieras</p>
            </div>
        </div>
         <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h3 class="display-4 fw-bolder">Desea realizar una busqueda por marca</h3>
                <form method="post">
                    <input type="text" class="form-control" name="marca"/>
                    <button class="btn btn-success">Buscar</button>
                </form>
            </div>
        </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach(Cubo c in Model) {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="@c.Imagen" alt="...">
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@c.Nombre</h5>
                                <h6 class="fw-bolder">@c.Marca</h6>
                                <!-- Product price-->
                                @c.Precio
                        </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" asp-action="Comprar" asp-controller="Pedidos" asp-route-idcubo="@c.IdCubo">Comprar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

